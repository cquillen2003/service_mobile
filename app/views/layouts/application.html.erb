<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <!-- TITLE OF SITE -->
    <title>HVAC Software | HVAC Contractor Software</title>

    <meta name="description" content="Discover how ServiceWise's online HVAC software can improve customer service and reduce costs for HVAC companies." />
    <meta name="keywords" content="HVAC, HVAC contractor, contractor, service, service call, service ticket, inspection report" />
    <meta name="author" content="ServiceWise">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- FAVICON  -->
    <link rel="icon" href="/smartmvp/images/favicon/favicon.png">
    
    <!-- =========================
       STYLESHEETS 
    ============================== -->
    
    <!-- BOOTSTRAP CSS -->
    <link rel="stylesheet" href="/smartmvp/css/plugins/bootstrap.min.css">

    <!-- FONT ICONS -->
    <link rel="stylesheet" href="/smartmvp/css/icons/icons.min.css">
     
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600,700%7COpen+Sans:300,400,600,700%7CHandlee" rel="stylesheet">
    
    <!-- PLUGINS STYLESHEET 
    <link rel="stylesheet" href="/smartmvp/css/plugins/animate.min.css">
    <link rel="stylesheet" href="/smartmvp/css/plugins/venobox.min.css">
    -->
    
    <!-- CUSTOM STYLESHEET -->
    <link rel="stylesheet" href="/smartmvp/css/style.css">

    <!-- RESPONSIVE FIXES -->
    <link rel="stylesheet" href="/smartmvp/css/responsive.css">

    <!-- COLORE STYLESHEET -->
    <!-- Change here the Main Color of the Site: Choose your favorite predefined color from assets/css/colors.css -->
    <link rel="stylesheet" href="/smartmvp/css/colors/blue.css" title="blue">

    <link rel="stylesheet" href="/smartmvp/css/custom.css">
    
    <!--[if lt IE 9]>
            <script src="/smartmvp/js/plugins/html5shiv.min.js"></script>
            <script src="/smartmvp/js/plugins/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <div class="main-wrapper">

        <!-- =========================
             PRELOADER
        ============================== -->
        <div class="preloader">
            <div class="loader-container">
                <div class="text-logo">ServiceWise</div>
                <div class="signal"></div>
            </div>
        </div> 
        

        <!-- =========================
             HEADER
        ============================== -->
        <header class="header" id="top" data-stellar-background-ratio="0.5">
            <!-- Background Overlay -->
            <div class="overlay">

                <!-- =========================================
                     Navigation
                ========================================== -->
                <nav class="navbar navbar-fixed-top" role="navigation">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Navbar-Header -->
                                <div class="navbar-header">
                                    


                                    <!-- Text-Logo -->
                                    <a href="#top" class="navbar-brand scrollto" title="ServiceWise">
                                        <span class="text-logo">ServiceWise</span>
                                    </a> 

                                    <!-- Image-Logo: Remove this comments and the section above Text-Logo if you want to add an Image-Logo (recommended sizes -> max-height:50, max-width:200) 

                                    <a href="#top" class="navbar-brand img-logo scrollto" title="SmartMvp">
                                        <img src="assets/images/logo.png" alt="Logo">
                                    </a> 
                                    -->

                                </div><!-- /End Navbar-Header -->

                            </div><!-- /End Col -->
                        </div><!-- /End Row -->
                    </div><!-- /End Container -->
                </nav><!-- /End Sticky Navigation -->

                
                <!-- =========================================
                     Hero-Section
                ========================================== -->
                <div class="container vmiddle earlyaccess">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="hero-section">
                                
                                <!-- Welcome - Hero Message -->
                                <h1 class="text-white">Paperless At Last</h1>
                                <p class="text-white">Easily complete service tickets, proposals, inspection reports, maintenance agreements, and record equipment information in the field with mobile forms built for HVAC.  And integrate them with existing software.</p>

                                <p class="text-white">Coming Spring 2015.</p>
                                
                                <div class="col-sm-12" style="padding-left:0">    
                                    
                                    <!-- Early Access Subscribe -->
                                    <%= form_for(@lead, remote: true) do |f| %>
                                        <div class="row earlyaccess-box">
                                            <div class="col-sm-12">
                                                
                                                <!-- Notifications -->
                                                <p class="subscription-success"><i class="icon icon_check_alt2"></i> Thank you!  We will contact you shortly.</p>
                                                <p class="subscription-failed"><i class="icon icon_close_alt2"></i> Something went wrong!  Please try again later.</p>
                                                
                                                <div class="input-group">
                                                    <%= f.text_field(:email, class: "form-control", style: "min-width:195px",
                                                        placeholder: "Enter your Email Address") %>
                                                    <span class="input-group-btn">
                                                        <%= f.submit "GET EARLY ACCESS", class: "btn btn-color", id: "lead_button",
                                                            data: { disable_with: "SENDING............." }  %>
                                                    </span>
                                                </div>
                                            
                                            </div>
                                        </div>
                                    <% end %>

                                </div><!-- /End Col -->
                                <span class="text-white email-policy">We'll never spam you or share your email address.</span>

                            </div><!-- /End Intro-Section -->
                        </div><!-- /End Col -->

                        <!-- App Showcase Image -->
                        <div class="col-sm-6 hidden-xs">
                            <div class="app-box">
                                <img src="/smartmvp/images/devices-app-blue-sm.png" alt="" class="img-responsive">
                            </div>
                        </div>

                    </div><!-- /End Row -->
                </div><!-- /End Container Hero-Section -->


            </div><!-- /End Background Overlay -->
        </header>
        <!-- =========================
             /END HEADER
        ============================== -->


        <!-- =================================
             EARLY FEATURES SECTION
        ====================================== -->
        <section class="early-features" id="features">
            <div class="container">
                <!-- Padding -->
                <div class="wrapper-lg">
                    <div class="row">
                        <!-- Section Header Title -->
                        <div class="col-xs-12">
                            <h2>Designed <strong>with</strong> HVAC technicians <strong>for</strong> HVAC technicians</h2>
                            <p class="large">Complete forms, capture signatures, and record equipment information from nearly any device, with or without internet access.</p>
                        </div>
                    </div>
                    <!-- Features with Icons -->
                    <div class="row">
                        <div class="col-md-4 feature-box">
                            <div class="icon-box">
                               <i class="icon icon-target icon-sm"></i> 
                            </div>
                            <h4>HVAC Focused</h4>
                            <p>Service tickets, proposals, inspection reports, maintenance agreements, and more.  No distractions.  Your business is our business.</p>
                        </div>

                        <div class="col-md-4 feature-box">
                            <div class="icon-box">
                               <i class="icon icon-profile-male icon-sm"></i> 
                            </div>
                            <h4>Usability Built-In</h4>
                            <p>Happy technicians are crucial.  User experience design, extensive field testing, and continous improvement is built-in to everything we do.</p>
                        </div>

                        <div class="col-md-4 feature-box">
                            <div class="icon-box">
                               <i class="icon icon-documents icon-sm"></i> 
                            </div>
                            <h4>Simply Flexible </h4>
                            <p>Submit documents via email, PDF, or to existing software automatically.  Change a little or change a lot.  It's your call.</p>
                        </div>

                        <div class="col-md-4 feature-box">
                            <div class="icon-box">
                               <i class="icon icon-adjustments icon-sm"></i> 
                            </div>
                            <h4>Easy to Customize</h4>
                            <p>More than custom fields.  We tailor our software to work for your business.</p>
                        </div>

                        <div class="col-md-4 feature-box">
                            <div class="icon-box">
                               <i class="icon icon-mobile icon-sm"></i> 
                            </div>
                            <h4>Nearly Any Device</h4>
                            <p>A single product that works seamlessly on iPhone, iPad, Android, Windows Phone, BlackBerry, and more.  Modern HTML5 technology makes it possible.</p>
                        </div>

                        <div class="col-md-4 feature-box">
                            <div class="icon-box">
                               <i class="icon icon-rss icon-sm"></i> 
                            </div>
                            <h4>Full Offline Capability</h4>
                            <p>No internet connection required.  Automatically sync when a connection is available.</p>
                        </div>
                        
                    </div><!-- /End Row -->
                </div><!-- /End Wrapper -->
            </div><!-- /End Container -->
        </section>
        <!-- =============================
             /END EARLY FEATURES SECTION
        ============================== -->

        <!-- ==================================================
            FOOTER
        ======================================================= -->
        <footer class="footer dark-bg" id="footer">
            <div class="container">
                <div class="wrapper-lg">
                    <div class="row">
                        <!-- Footer Left Col -->
                        <div class="col-md-6">
                                <!-- Logo -->
                                <a href="#top" class="scrollto" title="ServiceWise">
                                    <span class="text-logo">ServiceWise</span>
                                </a>
                                <p class="footer-hero">Easily complete service tickets, proposals, inspection reports, maintenance agreements, and record equipment information in the field with mobile forms built for HVAC.  And integrate them with existing software.</p>
                                <br />
                                <p class="footer-cta">Sign up now!
                                    <a href="#top" class="btn btn-color">Get Early Access</a>
                                </p> 
                        </div>
                        <!-- Footer Contact Col -->
                        <div class="col-md-2">

                        </div>
                        <!-- Footer Right Col: Twitter Feed -->
                        <div class="col-md-4">
                            <h5 class="text-white">Contact Us</h5>
                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="icon icon_mail"></i>
                                </div>
                                <div class="contact-content">
                                    <a href="mailto:info@servicewise.co">info@servicewise.co</a>
                                </div>
                            </div>
                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="icon icon_pin"></i>
                                </div>
                                <div class="contact-content">
                                    4321 Emma Browning Ave.<br>
                                    Austin, Texas  78719
                                </div>
                            </div>
                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="icon icon_phone"></i>
                                </div>
                                <div class="contact-content">
                                    512-450-8153
                                </div>
                            </div>
                        </div>

                        <!-- Footer Menu and Copy -->
                        <div class="row">
                            <div class="col-md-12">
                                <p class="footer-copy">&copy; 2015 ServiceWise.  All rights reserved.</p>
                            </div>
                        </div>
                        
                    </div><!-- End Row -->
                </div><!-- /End Wrapper -->
            </div><!-- /End Container -->
        </footer>


    </div><!-- /End Main Wrapper-->


    <!-- =========================
        SCRIPTS 
    ============================== -->
    <!-- Required to include jquery_ujs for remote (ajax) form -->
    <!-- Also includes jquery -->
    <%= javascript_include_tag :application %>
    <script src="/smartmvp/js/plugins/bootstrap.min.js"></script>
    <script src="/smartmvp/js/plugins/modernizr.custom.min.js"></script>
    <script src="/smartmvp/js/plugins/plugins.min.js"></script>

    <!-- Custom Script -->
    <script src="/smartmvp/js/custom.js"></script>

    <script>
